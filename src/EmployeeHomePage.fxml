<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmployeeHomeController">
   <children>
      <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" minHeight="400.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label fx:id="welcomeLabel" textAlignment="CENTER">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Text fx:id="employeeStatus" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="What would you like to do today?" />
            <Button fx:id="checkScheduleButton" mnemonicParsing="false" onAction="#handleCheckSchedule" text="Check Current Schedule" textAlignment="CENTER" />
            <Button fx:id="availabilityButton" mnemonicParsing="false" onAction="#handleAvailability" text="Edit/View Availability" />
            <Button fx:id="timeOffButton" mnemonicParsing="false" onAction="#handleRequestTimeOff" text="Request Time Off" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Log Out" />
         </children>
      </VBox>
   </children>
</AnchorPane>
